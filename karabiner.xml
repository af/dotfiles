<?xml version="1.0"?>

<!-- custom keyboard mappings for https://pqrs.org/osx/karabiner/ -->
<!-- full list of keycodes:
     https://github.com/tekezo/Karabiner/blob/master/src/bridge/generator/keycode/data/KeyCode.data -->
<root>
    <item>
        <name>Ctrl-; maps to Ctrl-@</name>
        <appendix>Ctrl-; is not a valid control key, so turn it into one</appendix>
        <identifier>af.ctrl_semicolon</identifier>
        <autogen>
          __KeyToKey__
          KeyCode::SEMICOLON, ModifierFlag::CONTROL_L,
          KeyCode::KEY_2,     ModifierFlag::CONTROL_L | ModifierFlag::SHIFT_L
        </autogen>
    </item>

    <item>
        <name>Ctrl-' maps to Ctrl-^</name>
        <appendix>Ctrl-' is not a valid control key, so turn it into one</appendix>
        <identifier>af.ctrl_singlequote</identifier>
        <autogen>
          __KeyToKey__
          KeyCode::QUOTE,     ModifierFlag::CONTROL_L,
          KeyCode::KEY_6,     ModifierFlag::CONTROL_L | ModifierFlag::SHIFT_L
        </autogen>
    </item>

    <item>
        <name>Holding ; acts as Alt/Option</name>
        <identifier>af.hold_semicolon</identifier>
        <!-- note! in iTerm2, also need to set Right Option to work as "Esc" (Prefs->Profiles->Keys) -->
        <autogen>
          --KeyOverlaidModifier--
          KeyCode::SEMICOLON, ModifierFlag::NONE,
          KeyCode::OPTION_L,
          ModifierFlag::OPTION_L,
          KeyCode::SEMICOLON, ModifierFlag::NONE
        </autogen>
    </item>
</root>
